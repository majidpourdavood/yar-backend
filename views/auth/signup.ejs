<%- include('../includes/head.ejs') %>

<%- include('../includes/navigation.ejs') %>

<link rel="stylesheet" href="/css/login.css">

   <main>
       <div class="container">
           <% if (errorMessage) { %>
               <div class="user-message user-message--error"><%= errorMessage %></div>
           <% } %>

           <div class="container">
               <div class="row justify-content-center style_login_box">
                   <div class="col-12 col-md-8 col-lg-6">
                       <div class="card">
                       <div class="card-header">
                                ثبتنام
                            </div>
                            <div class="card-body">

                                <form class="login-form" action="/signup" method="POST">
                                    <div class="form-group">
                                        <label for="email">ایمیل</label>
                                        <input class="form-control" type="email" name="email" id="email">
                                    </div>

                                    <div class="form-group">
                                        <label for="mobile">موبایل</label>
                                        <input class="form-control" type="text" name="mobile" id="mobile">
                                    </div>
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                    <div class="form-group">
                                        <label for="password">پسورد</label>
                                        <input class="form-control" type="password" name="password" id="password" autocomplete="on">
                                    </div>

                                    <div class="form-group">
                                        <label for="confirmPassword">تکرار پسورد</label>
                                        <input class="form-control" type="password" name="confirmPassword" id="confirmPassword" autocomplete="on">
                                    </div>

                                    <button class="btn btn-info" type="submit">ارسال</button>
                                </form>
                            </div>
                        </div>
                        </div>

                    </div>
                </div>
            </div>


    </main>
<%- include('../includes/end.ejs') %>