    <div class="container">


        <div class="container">
            <div class="row justify-content-center style_login_box">




                <div class="row col-12 col-md-8 col-lg-6">
                    <div class="row col-12">

                        <% if (errorMessage) { %>
                            <div class="row col-12 alert alert-danger alert-dismissible fade show mb-3" role="alert">

                                    <%= errorMessage %>

                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                            <% } %>
